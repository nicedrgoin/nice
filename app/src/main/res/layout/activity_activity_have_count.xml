<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="whretoplay.qf.com.nice.activity.ActivityHaveCount">
<LinearLayout
    android:id="@+id/havecount_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="中国大陆"
    android:textSize="15dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/textView4" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.05dp"
        android:background="#ff909090"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/view2" />
<android.support.design.widget.TextInputEditText
    android:id="@+id/textInputLayout_userName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="用户名"
    android:padding="5dp"
    android:layout_below="@+id/view2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@null"
    android:drawableLeft="@drawable/login_phone_icon"
   />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.05dp"
        android:background="#ff909090"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
         />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputLayout_userPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:background="@null"
        android:padding="5dp"
        android:drawableLeft="@drawable/login_pwd_icon"
        android:layout_below="@+id/textInputLayout_userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.05dp"
        android:background="#ff909090"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffd800"
        android:text="登录"/>
    <TextView
        android:id="@+id/forgetsecret"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"/>
    <View
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="0.05dp"
        android:background="#ff909090"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        />
</LinearLayout>
    <LinearLayout
        android:layout_below="@+id/havecount_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/qq_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon_qq_color"/>
        <ImageView
            android:id="@+id/weichat_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon_wechat_color"/>
        <ImageView
            android:id="@+id/sina_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon_weibo_color"/>
    </LinearLayout>
</RelativeLayout>
