<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main"
            style="@style/main_rb_style"
            android:checked="true"
            android:text="首页"
            android:drawableTop="@drawable/tab_icon_main"/>

        <RadioButton
            android:id="@+id/rb_discover"
            android:text="发现"
            style="@style/main_rb_style"
            android:drawableTop="@drawable/icon_tab_discover"/>
        <RadioButton
            android:id="@+id/rb_photo"
            style="@style/main_rb_style"
            android:text="拍照"
            android:drawableTop="@drawable/ic_floating_action_camera"
            />

        <RadioButton
            android:id="@+id/rb_chat"

            style="@style/main_rb_style"

            android:text="私聊"
            android:drawableTop="@drawable/tab_icon_chat"/>
            <!--android:drawableTop="@drawable/selector_main_sence"-->

        <RadioButton
            android:id="@+id/rb_me"
            style="@style/main_rb_style"
            android:text="我"
            android:drawableTop="@drawable/icon_tab_me"/>
            <!--android:drawableTop="@drawable/selector_main_wode"-->
    </RadioGroup>

</RelativeLayout>
